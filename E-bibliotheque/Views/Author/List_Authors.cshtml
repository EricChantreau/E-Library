
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>E-Librairy - All Authors</title>
</head>
<body>
    <h1>All Authors</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in ViewData["authors"] as List<E_librairy.Models.Author>)
            {
                <tr>
                    <td>@author.Id</td>
                    <td>@author.Name</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
